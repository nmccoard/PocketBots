<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".BattleIntroActivity"
    android:background="@drawable/bg">


    //ImageView
        //android:id="@+id/bgImageView"
        //android:layout_width="wrap_content"
        //android:layout_height="match_parent"
        //android:scaleType="centerCrop"
        //app:srcCompat="@drawable/background"
        //tools:layout_editor_absoluteX="0dp"
        //tools:layout_editor_absoluteY="-16dp" />

    <ImageView
        android:id="@+id/boyImageView"
        android:layout_width="105dp"
        android:layout_height="144dp"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/monsterImageView"
        android:layout_width="171dp"
        android:layout_height="174dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/battleButton"
        android:layout_width="121dp"
        android:layout_height="54dp"
        android:layout_marginStart="307dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="307dp"
        android:background="#B3FFEB3B"
        android:onClick="battle"
        android:text="begin battle"
        android:textColor="#F2333333"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/robotImageView"
        android:layout_width="169dp"
        android:layout_height="111dp"
        android:layout_marginStart="160dp"
        android:layout_marginBottom="52dp"
        android:scaleX="-1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>